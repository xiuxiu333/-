/* pages/mediaDetail/mediaDetail.wxss */

page {
  width: 100%;
}

.media-detail {
  width: 100%;
}

.media-detail .header-img {
  margin: 0 29rpx;
  height: 380rpx;
  border-radius: 10rpx;
  overflow: hidden;
}

.media-detail .header-img .swiper-img {
  height: 380rpx;
}

.media-detail .header-img .swiper-img image {
  width: 100%;
  height: 100%;
}

.media-detail .tit-box {
  padding: 20rpx 0 0 47rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-right: 30rpx;
}

.media-detail .tit-box .tit {
  font-size: 28rpx;
  padding-right: 52rpx;
}

.media-detail .tit-box .address {
  font-size: 24rpx;
  color: #999;
}

.media-detail .tit-box .address .line {
  padding: 0 15rpx;
  color: #b6b6b7;
}

.media-detail .score {
  padding: 12rpx 0 0 47rpx;
}

.media-detail .score .item {
  display: flex;
  align-items: center;
  margin-top: 20rpx;
  height: 22rpx;
  position: relative;
}

.media-detail .score .item .select {
  position: absolute;
  left: 0;
  top: 0;
  height: 22rpx;
  overflow: hidden;
}

.media-detail .score .item .select image {
  position: absolute;
  left: 0;
  top: 0;
}

.media-detail .score .item .num {
  font-size: 26rpx;
}

.media-detail .score .item .num.start-num {
  color: #e72e03;
  padding-left: 6rpx;
}

.media-detail .score .item .num.gradet-num {
  color: #ff6200;
  padding-left: 4rpx;
}

.media-detail .score .start image {
  width: 153rpx;
  height: 22rpx;
  margin-right: 11rpx;
}

.media-detail .score .grade image {
  width: 153rpx;
  height: 22rpx;
  padding-right: 8rpx;
}

.price {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-top: 15rpx;
  padding: 10rpx 64rpx 36rpx 46rpx;
}

.price .pric-left {
  font-size: 22rpx;
  color: #17181a;
}

.price .pric-left text {
  color: #e72e03;
}

.price .pric-right {
  font-size: 32rpx;
  color: #ff6200;
}

.date {
  border: 5rpx solid #f5f7fc;
  border-left: 0;
  border-right: 0;
  padding: 30rpx 31rpx 30rpx 47rpx;
}

.date .title {
  color: #929292;
  font-size: 24rpx;
  padding-bottom: 17rpx;
}

.date .info {
  display: flex;
  justify-content: space-between;
}

.date .info .date-info {
  white-space: nowrap;
  font-size: 24rpx;
  color: #1f1f1f;
}

.date .info .date-info text {
  color: #e82e03;
}

.date-box {
  display: flex;
}

.date-btn {
  display: inline-block;
  font-size: 24rpx;
  border-bottom: 1px solid #ca2228;
  /* color: #ca2228; */
}

.date-btn2 {
   display: inline-block;
  font-size: 24rpx;
   border-bottom: 1px solid #ca2228;
  /* color: #ca2228; */
}

.main {
 padding-bottom: 180rpx;
}

.detial-info {
  padding-top: 30rpx;
  border-bottom: 20rpx solid #f5f7fc;
  text-align: left;
}

.detial-info .title {
  padding: 0 0 40rpx 47rpx;
  font-size: 28rpx;
}

.detial-info .text {
  padding: 0 47rpx;
  font-size: 26rpx;
  line-height: 40rpx;
}

.detial-info .text text {
  display: block;
  padding-bottom: 20rpx;
  color: #1f1f1f;
  padding: 10rpx 0;
}

.detial-info .text text.red {
  color: #e82e03;
}

.detial-info .detail-img {
  display: block;
  padding: 0 30rpx;
  width: 100%;
  box-sizing: border-box;
  height: 354rpx;
}

.detial-info .detail-note {
  margin: 58rpx 48rpx 0;
  border-top: 1px solid #e9e9e9;
}

.detial-info .detail-note view {
  height: 90rpx;
}

.detial-info .detail-note view image {
  width: 22rpx;
  height: 22rpx;
  margin-right: 22rpx;
}

.detial-info .detail-note view text {
  font-size: 26rpx;
  line-height: 90rpx;
  color: #666;
}

.detial-info .detail-note view text.text-bold {
  color: #1f1f1f;
}

.buy-container {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  background: #fff;
}

.buy-btn {
  margin: 30rpx 52rpx;
  background-color: #f25856;
  border-radius: 10px;
  font-size: 32rpx;
  color: #fff;
}

.detial-info.product {
  padding-top: 0;
}

.product-para, .product-detail {
  margin: 0 47rpx;
  font-size: 26rpx;
  line-height: 36rpx;
  padding: 33rpx 0;
  display: flex;
}

.product-para {
  border-bottom: 1px solid #e9e9e9;
}

.product-para text {
  width: 500rpx;
}

.product-para text.pro-title, .product-detail text.pro-title {
  width: 200rpx;
  color: #929292;
}

.product-para text, .product-detail text {
  color: #414141;
}

.regulations {
  font-size: 26rpx;
  line-height: 40rpx;
  padding: 47rpx 47rpx 0;
}

.regulations .texts {
  padding-bottom: 20rpx;
}

.navbar {
  flex: none;
  display: flex;
  background: #fff;
  border-bottom: 1px solid #e9e9e9;
}

.navbar .item {
  position: relative;
  flex: auto;
  text-align: center;
  line-height: 85rpx;
  font-size: 28rpx;
  color: #7f7f7f;
}

.navbar .item.active {
  color: #000;
}

.navbar .item.active:after {
  content: "";
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  bottom: -1rpx;
  width: 55rpx;
  border-bottom: 2rpx solid;
}

.task {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.5);
  overflow: hidden;
  z-index: 9;
}

.go-buy {
  width: 100%;
  overflow: hidden;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 10;
  background: #fff;
  min-height: 930rpx;
  border-top-left-radius: 12rpx;
  border-top-right-radius: 12rpx;
}

.go-buy .close {
  position: absolute;
  right: 20rpx;
  top: 20rpx;
}

.go-buy .buy-info {
  display: flex;
  padding: 40rpx 0 0 40rpx;
}

.go-buy .buy-info image {
  width: 220rpx;
  height: 210rpx;
  border-radius: 5px;
}

.go-buy .buy-info .text {
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  padding-left: 35rpx;
  font-size: 28rpx;
}

.go-buy .buy-info .text .buy-pri {
  padding-bottom: 35rpx;
  color: #ff5301;
  font-size: 32rpx;
}

.go-buy .buy-detail {
  padding: 44rpx 20rpx 0;
}

.go-buy .buy-detail .buy-title {
  display: block;
  font-size: 24rpx;
  color: #17181a;
  padding-bottom: 11rpx;
  border-bottom: 1px solid #e9e9e9;
  padding-left: 20rpx;
}

.go-buy .buy-detail .buy-title.no-line {
  border-bottom: 0;
}

.go-buy .buy-detail .select-size {
  display: flex;
  padding-left: 20rpx;
}

.go-buy .buy-detail .select-size text {
  font-size: 24rpx;
  padding: 18rpx 26rpx;
  background: #f5f5f5;
  border: 1px solid #f5f5f5;
  border-radius: 10rpx;
  margin-right: 15rpx;
  margin-top: 17rpx;
}

.go-buy .buy-detail .select-size text.active {
  background: #fff9f9;
  border: 1px solid #f25856;
  color: #f25856;
}

.go-buy .buy-date {
  margin: 29rpx 20rpx 0;
  border-top: 1px solid #e9e9e9;
  padding: 29rpx 0 50rpx 20rpx;
  font-size: 24rpx;
}

.go-buy .buy-date .date-tit {
  color: #929292;
}

.go-buy .date-info {
  padding-top: 30rpx;
  color: #1f1f1f;
}

.go-buy .date-info text {
  color: #e82e03;
}
