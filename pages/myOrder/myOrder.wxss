/* pages/myOrder/myOrder.wxss */

/*切换栏*/

page {
  height: 100%;
  overflow-y: auto;
  background: #f5f7fc;
}
.swiper-tab {
  width: 100%;
  height: 95rpx;
  line-height: 95rpx;
  color: #000;
  display: flex;
  position: relative;
  z-index: 2;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  background: #fff;
  border-bottom: 20rpx solid #f5f7fc;
}

.swiper-tab-list {
  width: 33%;
  height: 95rpx;
  font-size: 28rpx;
  text-align: center;
  border-bottom: 2rpx solid #fff;
  position: relative;
  color: #7f7f7f;
}
.swiper-tab-list .line{
  position: absolute;
  bottom: -1px;
  left: 50%;
  transform: translateX(-50%);
  width: 54rpx;
  height: 2rpx;
  background: #fff;
}
.number-num {
  position: absolute;
  right: 45rpx;
  top: 18rpx;
  background: #f25856;
  color: #fff;
  display: block;
  width: 30rpx;
  height: 30rpx;
  line-height: 30rpx;
  border-radius: 15rpx;
  font-size: 20rpx;
}

.swiper-tab-list.on {
  /* border-bottom: 2px solid #f25856; */
  color: #f25856;
}
.swiper-tab-list.on .line{
  background: #f25856;
}
.navTopList {
  display: flex;
  width: 100%;
  height: 70rpx;
  background: #fff;
  border-bottom: 1rpx solid #bebebe;
  margin-top: 5px;
}

.navTopList .order-info {
  text-align: center;
}

.navTopList .order-info view {
  width: 56rpx;
  height: 56rpx;
  margin-left: 31rpx;
}

.navTopList .ywc, .navTopList .dfk, .navTopList .yqx {
  flex: 1;
}

/*订单列表*/

.swiper-box {
  background-color: rgb(245, 247, 252);
  height: 100%;
}
.swiper-container{
  display: flex;
 height: calc(100% - 115rpx);
}
 swiper-item{
 height: 100%;
 overflow-y:auto; 
 /* overflow:scroll; */
 /* overflow-x:hidden; */
}
.orderDetails {
  /* width: 715rpx; */
  background: #fff;
  /* height: 519rpx; */
  border-radius: 15rpx;
  border: 1rpx solid #fff;
  padding: 30rpx 0;
  margin: 0 20rpx 20rpx;
}

.orderListTitle {
  padding-left: 52rpx;
  padding-right: 30rpx;
}

.orderLs {
  display: flex;
  font-size: 26rpx;
  justify-content: space-between;
}

.orderStatus {
  color: #f25856;
}

.productImg image {
  width: 182rpx;
  height: 172rpx;
  margin-left: 30rpx;
  border-radius: 5rpx;
  margin-top: 30rpx;
}

.orderListDetails {
  width: 665rpx;
  height: 232rpx;
  display: flex;
  margin-left: 30rpx;
  background: #fafafa;
  margin-top: 30rpx;
  border-radius: 15rpx;
}

.productInfo {
  display: flex;
  flex-direction: column;
  margin: 50rpx 0 40rpx 30rpx;
}

.listFont {
  font-size: 24rpx;
  display: flex;
  justify-content: space-between;
}

.list {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  margin-top: 40rpx;
  color: #888;
}

.productTitle {
  color: #888;
}

.productCount {
  padding-left: 490rpx;
  line-height: 59rpx;
  font-size: 24rpx;
  color: #151a1e;
}
.productCount .zh-text{
  font-size: 26rpx;
}
.productCount .num-text{
  font-size: 30rpx;
}
.hot-box {
  width: 100%;
  height: 100%;
}

.btn {
  width: 100%;
  /* height: 80rpx; */
  display: flex;
  justify-content: space-between;
}
.btnList .btns{
  width: 50rpx;
  height: 52rpx;
  background: transparent;
  border: 0;
  outline: none;
  padding: 0;
  margin-left: 50rpx;
  line-height: 0;
}
.btnList .btns::after{
  border: 0;
}
.btnList .btns image {
  width: 100%;
  height: 100%;
}

.btnButton {
  display: flex;
  padding-right: 27rpx;
  align-items: center;
}

.btnButton button {
  background-color: #f7f7f7;
  border-radius: 27rpx;
  border: solid 1px #c7c7c7;
  width: 150rpx;
  height: 54rpx;
  line-height: 54rpx;
  font-size: 24rpx;
  margin-left: 20rpx;
  color: #000;
  padding: 0;
  text-align: center;
}
.btnButton button::after{
  border: 0;
}

.btnButton .fukuan {
  border: 1px solid #f25856;
  background-color: #fff;
  color: #f25856;
}
.media-number{
  color: #888;
  padding-top: 19rpx;
  font-size: 22rpx;
  line-height: 24rpx;
}
scroll-view{
  height: 100%;
}