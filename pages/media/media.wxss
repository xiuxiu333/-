/* pages/media/media.wxss */

.media {
  width: 100%;
  height: 100%;
  overflow-x: hidden;
}

.search {
  margin: 0 50rpx;
  height: 80rpx;
  background-color: #fff;
  box-shadow: 1px 2px 4px 1px rgba(115, 115, 115, 0.08);
  border-radius: 5rpx;
  border: solid 1px #ededed;
  position: relative;
  padding: 0 240rpx 0 57rpx;
}

.search-input {
  padding-left: 25rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
}

.search-btn {
  position: absolute;
  left: 26rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 31rpx;
  height: 31rpx;
}

.date-box {
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  display: flex;
}

.date-btn {
  font-size: 24rpx;
  color: #ca2228;
}

.date-btn2 {
  font-size: 24rpx;
  color: #ca2228;
}

.filter {
  display: flex;
  justify-content: space-around;
  height: 97rpx;
  font-size: 28rpx;
  border-bottom: 5rpx solid #f5f7fc;
}

.filter .item {
  position: relative;
}

.filter .item .select {
  line-height: 97rpx;
}

.filter .item .select image {
  width: 16rpx;
  height: 10rpx;
  vertical-align: middle;
  margin-left: 13rpx;
}

.filter .item .select .select-icon {
  position: absolute;
  right: -30rpx;
  top: 48%;
  border: 10rpx solid #d8d8d8;
  border-top-color: #d8d8d8;
  border-bottom-color: transparent;
  border-left-color: transparent;
  border-right-color: transparent;
}

.filter .item .select.active {
  color: #ca2228;
}

.filter .item .select.active .select-icon {
  border: 10rpx solid #ca2228;
  border-top-color: #ca2228;
  border-bottom-color: transparent;
  border-left-color: transparent;
  border-right-color: transparent;
}

.filter .item .option-box {
  position: absolute;
  top: 86rpx;
  left: 50%;
  transform: translateX(-50%);
  font-size: 26rpx;
  box-sizing: border-box;
  background: #fff;
  opacity:0.9;
  box-shadow: 0 1rpx 3rpx rgba(0, 0, 0, 0.1);
  z-index: 99;
  padding-bottom: 10rpx;
}

.filter .item .option-box text {
  padding: 0 40rpx;
  line-height: 60rpx;
  display: block;
  white-space: nowrap;
}

.filter .item .option-box text.active {
  color: #ca2228;
}

.main {
  width: 100%;
}

.main .item {
  width: 100%;
  border-bottom: 5rpx solid #f5f7fc;
  padding: 40rpx 0 40rpx 47rpx;
  display: flex;
}

.main .item .img {
  width: 270rpx;
  height: 215rpx;
  border-radius: 10rpx;
  overflow: hidden;
  display: flex;
  margin-top: 5rpx;
  justify-content: space-between;
}

.main .item .img image {
  width: 100%;
  height: 100%;
}

.main .item .info {
  width: 380rpx;
  padding-left: 30rpx;
}

.main .item .title {
  font-size: 28rpx;
  padding-top: 5rpx;
  display: block;
}

.main .item .address {
  padding-top: 15rpx;
  font-size: 24rpx;
  color: #17181a;
  display: block;
}

.main .item .price {
  font-size: 24rpx;
  padding-top: 15rpx;
  color: #303030;
}

.main .item .address text.line {
  color: #b6b6b7;
  padding: 0 15rpx;
}

.main .item .score {
  padding-top: 15rpx;
  display: flex;
  line-height: 28rpx;
  align-items: center;
}

.main .item .score .start, .main .item .score .grade {
  display: flex;
  position: relative;
}

.main .item .score .start image {
  width: 153rpx;
  height: 22rpx;
  margin-right: 11rpx;
}

.main .item .score .start .select {
  position: absolute;
  left: 0;
  top: 0;
  height: 22rpx;
  overflow: hidden;
}

.main .item .score .start .select image {
  position: absolute;
  left: 0;
  top: 0;
}

.main .item .score .grade image {
  width: 153rpx;
  height: 23rpx;
  margin-right: 8rpx;
}

.main .item .score .grade .select {
  position: absolute;
  left: 0;
  top: 0;
  height: 22rpx;
  overflow: hidden;
}

.main .item .score .grade .select image {
  position: absolute;
  left: 0;
  top: 0;
}

.main .item .score .num {
  display: block;
  font-size: 24rpx;
}

.main .item .score .num.start-num {
  color: #e72e03;
}

.main .item .score .num.grade-num {
  color: #ff6200;
}
