/* pages/orderStatus/orderStatus.wxss */
page{
  height: 100%;
}
.status-container{
  width: 100%;
  background: #f5f7fc;
  height: 100%;
}
.title{
  padding: 0 47rpx;
  background: #fff;
}
.title text{
  display: inline-block;
  font-size: 28rpx;
  line-height: 80rpx;
  color: #f25856;
  border-bottom: 3rpx solid #f25856;
}
.main{
  margin: 20rpx;
  background: #fff;
  border-radius: 15rpx;
  padding: 45rpx 49rpx;
  position: relative;
}
.line{
  position: absolute;
  left: 47rpx;
  top: 105rpx;
  height:72%;
  width: 1px;
  background: #efefef;
}
.item{
  position: relative;
  display: flex;
  justify-content: space-between;
  font-size: 26rpx;
  color: #929292;
  padding: 40rpx 0 40rpx 37rpx;
  align-items: center;
}
.item::before{
  position: absolute;
  left: -5rpx;
  top: 50%;
  content: '';
  width: 11rpx;
  height: 11rpx;
  border-radius: 50%;
  background: #cccccc;
}
.item .icon{
  position: absolute;
  left: -22rpx;
  top: 50%;
  transform: translateY(-50%);
  background: #fff;
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
}
.item .icon image{
  width: 100%;
  height: 100%;
}
.item .info{
  display: flex;
  flex-direction: column;
}
.item .info .des{
  font-size: 24rpx;
  padding-top: 13rpx;
}
